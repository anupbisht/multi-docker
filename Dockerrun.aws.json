{
    "AWSEBDockerrunVersion": "2",
    "containerDefinitions": [
        {
            "name": "client",
            "image": "anupbisht/multi-client",
            "hostname": "client",
            "essential": false,
            "memory": 128
        },
        {
            "name": "server",
            "image": "anupbisht/multi-server",
            "hostname": "api",
            "essential": false,
            "memory": 128
        },
        {
            "name": "worker",
            "image": "anupbisht/multi-worker",
            "essential": false,
            "memory": 128
        },
        {
            "name": "nginx",
            "image": "anupbisht/multi-nginx",
            "essential": true,
            "memory": 128,
            "portMappings": [
                {
                    "hostPort": "80",
                    "containerPort": "80"
                }
            ],
            "links": [
                "clients",
                "servers"
            ]
        }
    ]
}